<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="AnimaxBase">
        <defName>Lizard</defName>
        <label>lizard</label>
        <description>Invented by an excommunicated West Ollin scientist, Lizard was designed to keep hunters alive in extreme deserts. Its list of ingredients is why he was excommunicated...</description>

        <graphicData>
            <texPath>Things/Item/Resource/AnimalProductRaw/EggBirdSmall</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
            <color>(100, 150, 100)</color>
        </graphicData>
        <rotatable>false</rotatable>

        <ingestible>
            <drugCategory>Medical</drugCategory>
            <outcomeDoers>
                <li Class="IngestionOutcomeDoer_GiveHediff">
                    <hediffDef>LizardHediff</hediffDef>
                    <severity>1.0</severity>
                    <toleranceChemical>Animax</toleranceChemical>
                </li>
            </outcomeDoers>
        </ingestible>
    </ThingDef>

    <HediffDef>
        <defName>LizardHediff</defName>
        <label>lizard</label>

        <defaultLabelColor>(0.4, 0.6, 0.4)</defaultLabelColor>

        <scenarioCanAdd>true</scenarioCanAdd>
        <maxSeverity>1.0</maxSeverity>
        <isBad>false</isBad>
        <hediffClass>HediffWithComps</hediffClass>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-0.5</severityPerDay>
            </li>
        </comps>
        <stages>
            <li>
                <label>wearing off</label>
                <minSeverity>0.01</minSeverity>
                <hungerRateFactorOffset>-0.15</hungerRateFactorOffset>
                <restFallFactor>1.2</restFallFactor>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.04</offset>
                    </li>
                </capMods>
                <statOffsets>
                    <ComfyTemperatureMax>2</ComfyTemperatureMax>
                </statOffsets>
            </li>

            <li>
                <minSeverity>0.4</minSeverity>
                <hungerRateFactorOffset>-0.3</hungerRateFactorOffset>
                <restFallFactor>1.3</restFallFactor>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.08</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.1</offset>
                    </li>
                </capMods>
                <statOffsets>
                    <ComfyTemperatureMax>8</ComfyTemperatureMax>
                    <ComfyTemperatureMin>2</ComfyTemperatureMin>
                </statOffsets>
            </li>

            <li>
                <label>adjusting</label>
                <minSeverity>0.9</minSeverity>
                <restFallFactor>1.1</restFallFactor>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.04</offset>
                    </li>
                </capMods>
                <statOffsets>
                    <ComfyTemperatureMax>2</ComfyTemperatureMax>
                </statOffsets>
            </li>
        </stages>
    </HediffDef>

    <ThoughtDef>
        <defName>LizardThought</defName>
        <workerClass>ThoughtWorker_Hediff</workerClass>
        <hediff>LizardHediff</hediff>
        <validWhileDespawned>true</validWhileDespawned>
        <stages>
            <li>
                <label>Lizard (wearing off)</label>
                <description>I feel hot and dehydrated.</description>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>

            <li>
                <label>Lizard</label>
                <description>The smooth-skins...bother me.</description>
                <baseMoodEffect>-5</baseMoodEffect>
            </li>

            <li>
                <label>Lizard (adjusting)</label>
                <description>It's starting to take effect.</description>
                <baseMoodEffect>-1</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
</Defs>