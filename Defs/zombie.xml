<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="DrugPillBase">
        <defName>Zombie</defName>
        <label>zombie</label>
        <description>This pill is what you get when you ask a hyper-intelligent AI to give you emergency survival rations. It doesn't taste good, fill your stomach, or smell like food. It does however, remove the need for external nutrients and sleep for its duration. Even glitterworld scientists don't know how it works, and they don't care to find out. People who've taken it wish they hadn't.</description>
        <graphicData>
            <texPath>Things/Item/Resource/AnimalProductRaw/EggBirdSmall</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
            <color>(150,150,150)</color>
        </graphicData>
        <socialPropernessMatters>false</socialPropernessMatters>
        <rotatable>false</rotatable>
        <statBases>
            <MarketValue>100</MarketValue>
            <Mass>0.005</Mass>
            <Flammability>0.7</Flammability>
        </statBases>
        <techLevel>Ultra</techLevel>
        <ingestible>
            <drugCategory>Medical</drugCategory>
            <outcomeDoers>
                <li Class="IngestionOutcomeDoer_GiveHediff">
                    <hediffDef>ZombieHediff</hediffDef>
                    <severity>1.0</severity>
                </li>
            </outcomeDoers>
        </ingestible>
        <comps>
            <li Class="CompProperties_Drug">
                <!--
                Need empty tags here, otherwise the game breaks when loading a save-game.
                Probably because the base drug class has
                    <thingClass>ThingWithComps</thingClass>
                -->
            </li>
        </comps>
        <tradeTags>
            <li>ExoticMisc</li>
        </tradeTags>
    </ThingDef>

    <HediffDef>
        <defName>ZombieHediff</defName>
        <hediffClass>HediffWithComps</hediffClass>
        <label>zombie</label>
        <defaultLabelColor>(0.6,0.6,0.6)</defaultLabelColor>
        <scenarioCanAdd>true</scenarioCanAdd>
        <maxSeverity>1.0</maxSeverity>
        <isBad>false</isBad>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-0.1</severityPerDay>
            </li>
        </comps>
        <stages>
            <li>
                <hungerRateFactorOffset>-1.0</hungerRateFactorOffset>
                <restFallFactor>0.0</restFallFactor>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.25</offset>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>

    <ThoughtDef>
        <defName>ZombieThought</defName>
        <workerClass>ThoughtWorker_Hediff</workerClass>
        <hediff>ZombieHediff</hediff>
        <validWhileDespawned>true</validWhileDespawned>
        <stages>
            <li>
                <label>zombie</label>
                <description>I don't need to eat or sleep, but my stomach feels empty, I can't concentrate, and I feel like a corpse.</description>
                <baseMoodEffect>-20</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

</Defs>
