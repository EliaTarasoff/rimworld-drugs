<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="AnimaxBase">
        <defName>Doggo</defName>
        <label>doggo</label>
        <description>Invented by an excommunicated West Ollin scientist, Doggo was designed to keep workers content and productive. Its list of ingredients is a bit controversial...</description>

        <graphicData>
            <texPath>Things/Item/Resource/AnimalProductRaw/EggBirdSmall</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
            <color>(150, 75, 0)</color>
        </graphicData>
        <rotatable>false</rotatable>

        <ingestible>
            <drugCategory>Medical</drugCategory>
            <outcomeDoers>
                <li Class="IngestionOutcomeDoer_GiveHediff">
                    <hediffDef>DoggoHediff</hediffDef>
                    <severity>1.0</severity>
                    <toleranceChemical>Animax</toleranceChemical>
                </li>
            </outcomeDoers>
        </ingestible>
    </ThingDef>

    <HediffDef>
        <defName>DoggoHediff</defName>
        <label>doggo</label>

        <defaultLabelColor>(0.6, 0.3, 0.0)</defaultLabelColor>

        <scenarioCanAdd>true</scenarioCanAdd>
        <maxSeverity>1.0</maxSeverity>
        <isBad>false</isBad>
        <hediffClass>HediffWithComps</hediffClass>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-0.5</severityPerDay>
            </li>
        </comps>
        <stages>
            <li>
                <label>wearing off</label>

                <restFallFactor>1.2</restFallFactor>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>0.15</offset>
                    </li>
                    <li>
                        <capacity>Hearing</capacity>
                        <offset>0.1</offset>
                    </li>
                </capMods>
                <statOffsets>
                    <HungerRateMultiplier>0.2</HungerRateMultiplier>
                </statOffsets>
            </li>

            <li>
                <minSeverity>0.4</minSeverity>
                <restFallFactor>1.4</restFallFactor>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>0.3</offset>
                    </li>
                    <li>
                        <capacity>Hearing</capacity>
                        <offset>0.2</offset>
                    </li>
                </capMods>
                <statOffsets>
                    <HungerRateMultiplier>0.4</HungerRateMultiplier>
                </statOffsets>
            </li>

            <li>
                <label>adjusting</label>

                <minSeverity>0.9</minSeverity>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>0.15</offset>
                    </li>
                    <li>
                        <capacity>Hearing</capacity>
                        <offset>0.1</offset>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>

    <ThoughtDef>
        <defName>DoggoThought</defName>
        <workerClass>ThoughtWorker_Hediff</workerClass>
        <hediff>DoggoHediff</hediff>
        <validWhileDespawned>true</validWhileDespawned>
        <stages>
            <li>
                <label>Doggo (wearing off)</label>
                <description>This feels weird...</description>
                <baseMoodEffect>-1</baseMoodEffect>
            </li>

            <li>
                <label>Doggo</label>
                <description>I can run for miles!</description>
                <baseMoodEffect>3</baseMoodEffect>
            </li>

            <li>
                <label>Doggo (adjusting)</label>
                <description>I feel more energetic.</description>
                <baseMoodEffect>1</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
</Defs>