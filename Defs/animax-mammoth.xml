<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="AnimaxBase">
        <defName>Mammoth</defName>
        <label>mammoth</label>
        <description>Invented by an excommunicated West Ollin scientist, Mammoth was designed to keep hunters alive where there was no firewood to keep warm. Its list of ingredients is why he was excommunicated...</description>

        <graphicData>
            <texPath>Things/Item/Resource/AnimalProductRaw/EggBirdSmall</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
            <color>(100, 100, 150)</color>
        </graphicData>
        <rotatable>false</rotatable>

        <ingestible>
            <drugCategory>Medical</drugCategory>
            <outcomeDoers>
                <li Class="IngestionOutcomeDoer_GiveHediff">
                    <hediffDef>MammothHediff</hediffDef>
                    <severity>1.0</severity>
                    <toleranceChemical>Animax</toleranceChemical>
                </li>
            </outcomeDoers>
        </ingestible>
    </ThingDef>

    <HediffDef>
        <defName>MammothHediff</defName>
        <label>mammoth</label>

        <defaultLabelColor>(0.4, 0.4, 0.6)</defaultLabelColor>

        <scenarioCanAdd>true</scenarioCanAdd>
        <maxSeverity>1.0</maxSeverity>
        <isBad>false</isBad>
        <hediffClass>HediffWithComps</hediffClass>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-0.5</severityPerDay>
            </li>
        </comps>
        <stages>
            <li>
                <label>wearing off</label>

                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.1</offset>
                    </li>
                </capMods>
                <statOffsets>
                    <ComfyTemperatureMin>-2</ComfyTemperatureMin>
                    <HungerRateMultiplier>0.1</HungerRateMultiplier>
                </statOffsets>
            </li>

            <li>
                <minSeverity>0.4</minSeverity>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.2</offset>
                    </li>
                </capMods>
                <statOffsets>
                    <ComfyTemperatureMin>-8</ComfyTemperatureMin>
                    <ComfyTemperatureMax>-2</ComfyTemperatureMax>
                    <HungerRateMultiplier>0.2</HungerRateMultiplier>
                </statOffsets>
            </li>

            <li>
                <label>adjusting</label>

                <minSeverity>0.9</minSeverity>
                <statOffsets>
                    <ComfyTemperatureMin>-2</ComfyTemperatureMin>
                </statOffsets>
            </li>
        </stages>
    </HediffDef>

    <ThoughtDef>
        <defName>MammothThought</defName>
        <workerClass>ThoughtWorker_Hediff</workerClass>
        <hediff>MammothHediff</hediff>
        <validWhileDespawned>true</validWhileDespawned>
        <stages>
            <li>
                <label>Mammoth (wearing off)</label>
                <description>I feel cold and sweaty.</description>
                <baseMoodEffect>-1</baseMoodEffect>
            </li>

            <li>
                <label>Mammoth</label>
                <description>I feel jolly and warm.</description>
                <baseMoodEffect>3</baseMoodEffect>
            </li>

            <li>
                <label>Mammoth (adjusting)</label>
                <description>It's starting to take effect.</description>
                <baseMoodEffect>1</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
</Defs>